<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:background="@drawable/kayu"
    tools:context=".Komentar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_back2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E8ADAA"
            android:text="Back"
            android:textStyle="italic"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Komentar"
                android:textColor="#7E2217"
                android:fontFamily="cursive"
                android:textSize="32sp" />

            <ImageView
                android:layout_width="184dp"
                android:layout_height="135dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/write" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/text_komen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Berikan komentar / saran kalian ya.."
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:textSize="15sp"
                android:textColor="#7E3117"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Kirimkan ke email rahmaayurizqi1@gmail.com"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:textSize="15sp"
                android:textColor="#7E3117"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To :"
                android:textSize="20sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                />
            <EditText
                android:id="@+id/et_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email (rahmaayurizqi1@gmail.com)"
                android:inputType="textEmailAddress" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Message :"
                android:textSize="20sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                />
            <EditText
                android:id="@+id/et_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Komentar"
                android:inputType="text"
                android:lines="10"
                android:gravity="start|top"/>

            <Button
                android:id="@+id/btn_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Send" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>